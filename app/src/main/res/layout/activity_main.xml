<!-- res/layout/activity_main.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title Bar -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/network_chat"
        android:textSize="25sp"
        android:gravity="center"
        android:background="@color/brand_color_3"
        android:textColor="@color/light_gray"
        android:padding="10dp"
        android:layout_alignParentTop="true"/>

    <!-- Main Content Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/titleTextView">

        <!-- Connection Row -->
        <LinearLayout
            android:id="@+id/connectionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="0dp"
                android:inputType="text"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="@string/your_name"
                android:textColorHint="@color/brand_color_2"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/connectButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/connect"
                android:background="@color/brand_color_2"
                android:textColor="@color/light_gray"
                />
        </LinearLayout>

        <!-- Chat Messages Area -->
        <LinearLayout
            android:id="@+id/chatLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/chatScrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/material_dynamic_neutral95"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/chatTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:padding="10dp"
                    android:textColor="@color/brand_color_2"
                    android:textStyle="bold"
                    android:textSize="11sp"/>
            </ScrollView>
        </LinearLayout>

        <!-- Message Input Row -->
        <LinearLayout
            android:id="@+id/messageInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:id="@+id/messageEditText"
                android:inputType="text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="@string/type_your_message"
                android:textColorHint="@color/brand_color_2"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send"
                android:textColor="@color/light_gray"
                android:background="@color/brand_color_2"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
